<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicTacToeCustomView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="TicTacToeFieldStyle">@style/GlobalTicTacToeFieldStyle</item>
    </style>

    <style name="DefaultTicTacToeFieldStyle">
        <item name="player1Color">@color/green</item>
        <item name="player2Color">@color/dark_red</item>
        <item name="greedColor">@color/light_gray</item>
    </style>

    <style name="GlobalTicTacToeFieldStyle" parent="DefaultTicTacToeFieldStyle">
    <item name="player1Color">@color/purple_500</item>
    </style>
</resources>